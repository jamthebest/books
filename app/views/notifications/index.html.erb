<h1>Notificaciones</h1>
<ol>
	<% if @notifications %>
		<table>
		  <tr>
			 	<th>Descripción</th>
			  <th></th>
			  <th></th>
			  <th></th>
			</tr>

			<% @notifications.each do |noti|%>
			  <tr>
				  <td><%= (noti.description + (!noti.leido ? " (Nuevo)" : "" )) %><%= " de #{User.find(noti.user_id).username}" %></td>
					<td><a class="btn btn-info" href=<%=notification_path(noti.id)%>> Ver </a></td>
					<td><a class="btn btn-danger" data-confirm="Estás Seguro?" data-method="delete" href=<%=notification_path(noti) %>><i class="icon-trash icon-white"></i> Borrar </a></td>
				</tr>
			<%end%>
		</table>
	<%end%>
</ol>

