<h1>Notificaciones</h1>
<ol>
	<% if @notifications %>
		<% @notifications.each do |noti|%>
			<li> 
				<%= (noti.description + (!noti.leido ? " (Nuevo)" : "" )) %>
				<%= "de #{User.find(noti.user_id).username}" %>
				<a class="btn btn-inverse" href=<%=notification_path(noti.id)%>> Ver </a>
				<%= link_to "Borrar", noti, :method=> :delete, :confirm=> "Estas Seguro??"%>
			</li>
		<%end%>
	<%end%>
</ol>

<br />

<a class="btn btn-inverse" href=<%=new_book_path%>> Agregar Libro </a>